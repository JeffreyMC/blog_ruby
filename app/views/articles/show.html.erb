<div class="form col-md-8 text-center mt-5 mx-auto">
  <h1><%= @article.title %></h1>
  <div>
    <% unless @article.user.nil? %>
      <p>Escrito por: <%= @article.user.email%></p>
    <%end%>
  </div>
  <div>
    <p><%= @article.body %></p>
  </div>
  <div>
    <%= link_to "Editar", edit_article_path(@article), :class => "btn btn-success" %>
  </div>
</div>
